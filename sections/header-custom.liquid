{% endschema %}

{% style %}
  .custom-header {
    background-color: #ffffff;
    padding: 20px 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .site-title a {
    font-size: 28px;
    font-weight: bold;
    color: #000;
    text-decoration: none;
  }

  .main-nav ul {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
  }

  .main-nav li {
    margin-left: 30px;
  }

  .main-nav li a {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }

  .main-nav li a:hover {
    color: #007ace;
  }
{% endstyle %}

